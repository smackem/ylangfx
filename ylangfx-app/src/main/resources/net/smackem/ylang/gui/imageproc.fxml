<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import net.smackem.ylang.gui.CodeEditor?>
<?import org.fxmisc.flowless.VirtualizedScrollPane?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.smackem.ylang.gui.ImageProcController"
            styleClass="root"
            stylesheets="@imageproc.css"
            onKeyPressed="#onKeyPressed">
   <top>
      <HBox spacing="4" style="-fx-padding: 4,4,4,4">
         <Button text="Load Image..." onAction="#loadImage" />
         <Button text="Run" onAction="#processImage" fx:id="runButton" />
         <Button text="Take" onAction="#takeImage" />
         <Button text="Save As..." onAction="#saveImageAs" />
         <Separator orientation="VERTICAL" />
         <SplitMenuButton fx:id="openMenuButton" text="Open Script..." onShowing="#fillScriptsMenu" onAction="#openScriptFile" />
         <Button text="Save Script..." onAction="#saveScriptAs" />
         <Button text="Browse Script Library..." onAction="#browseLibrary" />
         <Separator orientation="VERTICAL" />
         <ToggleButton fx:id="splitToggle" text="Horizontal" />
      </HBox>
   </top>
   <center>
      <SplitPane orientation="VERTICAL" fx:id="splitPane">
         <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" SplitPane.resizableWithParent="true">
            <Tab fx:id="sourceTab" text="Source">
               <ScrollPane fx:id="sourceContainer">
                  <ImageView fx:id="sourceImageView" preserveRatio="true" />
               </ScrollPane>
            </Tab>
            <Tab fx:id="targetTab" text="Target">
               <ScrollPane fx:id="targetContainer">
                  <StackPane>
                     <ImageView fx:id="targetImageView" preserveRatio="true"
                                StackPane.alignment="TOP_LEFT" />
                     <Label fx:id="messageTextArea"
                            wrapText="true"
                            StackPane.alignment="TOP_LEFT" />
                  </StackPane>
               </ScrollPane>
            </Tab>
            <Tab fx:id="logTab" text="Log">
               <TextArea fx:id="logTextArea" editable="false" minHeight="200" />
            </Tab>
         </TabPane>
         <TabPane>
            <Tab text="Code">
               <VirtualizedScrollPane>
                  <content>
                     <CodeEditor fx:id="codeEditor" minHeight="100" />
                  </content>
               </VirtualizedScrollPane>
            </Tab>
         </TabPane>
      </SplitPane>
   </center>
</BorderPane>
